{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": [
            "es2017"
        ],
        "strict": true,
        "esModuleInterop": false,
        "outDir": "build",
        "rootDir": "./",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
    },
    "include": [
        "./src/**/*.ts"
    ]
}